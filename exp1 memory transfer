
EXP 1: MEMORY TRANSFER:

Addition:
#include<reg51.h>
void main(void)
{
unsigned char x,y,z;
x=0x0A;
y=0x05;
P1=0x00;
z=x+y;
P1=z;
}

Subtract:
#include<reg51.h>
void main(void)
{
unsigned char x,y,z;
x=0x08;
y=0x04;
P1=0x00;
z=x-y;
P1=z;
}  

Multiply:
#include<reg51.h>
void main(void)
{
unsigned char x,y,z;
x=0x10;
y=0x02;
P1=0x00;
z=x*y;
P1=z;
}

Divide:
#include<reg51.h>
void main(void)
{
unsigned char x,y,z;
x=0x10;
y=0x02;
P1=0x00;
z=x/y;
P1=z;
}

C program to for data transfer:
#include <reg51.h>
void main(void)
{
unsigned char mynum[]= "012345ABCD";
unsigned char z;
for(z=0; z<=9; z++)
P1= mynum[z];
}










