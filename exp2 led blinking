LED Flashing:
#include<reg51.h>
void Delay(unsigned int time);
void main()
{P1=0x00;
while(1)
{
P1=0x0FF;
Delay(250);
P1=0x00;
Delay(250);
}}
void Delay(unsigned int time)
{
int i,j;
for(i=0;i<time;i++)
for(j=0;j<165;j++);
}


LED Toggling:
#include<reg51.h>
void Delay(unsigned int time);
void main()
{
while(1)
{
P1=0x0AA;
Delay(250);
P1=~P1;
Delay(250);
}
}
void Delay(unsigned int time)
{
int i,j;
for(i=0;i<time;i++)
for(j=0;j<165;j++);
}
